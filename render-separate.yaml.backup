# Backup: Separate Services Configuration
# Use this if you want to deploy backend and frontend as separate services

services:
  # Backend API Service
  - type: web
    name: nutrifit-backend
    env: python
    region: oregon
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn backend.main:app --host 0.0.0.0 --port $PORT
    envVars:
      - key: PYTHON_VERSION
        value: 3.11.0
      - key: GEMINI_API_KEY
        sync: false
      - key: SUPABASE_URL
        sync: false
      - key: SUPABASE_API_KEY
        sync: false
      - key: JWT_SECRET
        sync: false
    healthCheckPath: /health

  # Frontend Streamlit Service
  - type: web
    name: nutrifit-frontend
    env: python
    region: oregon
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: streamlit run frontend/app.py --server.port=$PORT --server.address=0.0.0.0
    envVars:
      - key: PYTHON_VERSION
        value: 3.11.0
      - key: API_URL
        value: https://nutrifit-backend.onrender.com
      - key: SUPABASE_URL
        sync: false
      - key: SUPABASE_API_KEY
        sync: false
      - key: GEMINI_API_KEY
        sync: false

# To use this configuration:
# 1. Rename this file to render.yaml
# 2. Update backend/main.py to allow CORS from frontend URL
# 3. Deploy as Blueprint on Render
# 4. Configure environment variables for BOTH services